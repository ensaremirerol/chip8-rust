    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'chip8-rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=chip8-rust",
                    "--package=chip8-rust"
                ],
                "filter": {
                    "name": "chip8-rust",
                    "kind": "bin"
                }
            },
            "args": [
                "-r",
                "./rom.ch8"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'chip8-rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=chip8-rust",
                    "--package=chip8-rust"
                ],
                "filter": {
                    "name": "chip8-rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}